.dialog-wrapper {
	position: fixed;
	left: 0;
	top: 0;
	z-index: 9999;
}

.dialog-wrapper .dialog-dialog {
	position: fixed;
	background-color: #fff;
	width: 78%;
	padding: 50rpx 60rpx;
	top: 17%;
	left: 50%;
	z-index: 10000;
	transform: translateX(-50%);
	border-radius: 20rpx;
	box-sizing: border-box;
}

.dialog-wrapper .dialog-dialog .dialog-content .title {
	text-align: center;
	font-size: 28rpx;
	color: #666;
}

.dialog-wrapper .dialog-dialog .dialog-content .subtitle {
	text-align: center;
	margin-top: 30rpx;
	font-size: 48rpx;
	color: #FF8710;
	margin-bottom:60rpx;
}

.dialog-wrapper .dialog-dialog input {
	border: 1px solid #c3c3c3;
	height:70rpx;
	line-height:70rpx;
	display:inline-block;
	width:100%;
	padding:0 20rpx;
	box-sizing:border-box;
	border-radius:35rpx;
	font-size:28rpx;
}

.dialog-wrapper .dialog-mask {
	position: fixed;
	width: 100%;
	height: 100%;
	background-color: #000;
	opacity: 0.4;
	z-index: 9999;
}

.dialog-wrapper .action-bar {
	display: flex;
	flex-direction: row;
	width: 100%;
	margin-top: 30rpx;
}

.dialog-wrapper .action-bar .reset-btn {
	flex: 1;
	padding: 22rpx 0;
	color: #999;
	font-size: 32rpx;
	text-align: center;
	margin-right: 10rpx;
	border-radius: 40rpx;
	background-color:#F6F6F6;
	border:1px solid #DEDEDE;
}

.dialog-wrapper .action-bar .confirm-btn {
	flex: 1;
	padding: 22rpx 0;
	color: #fff;
	font-size: 32rpx;
	text-align: center;
	background-color: #FF8710;
	margin-left: 10rpx;
	border-radius: 40rpx;
}